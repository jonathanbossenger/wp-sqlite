{
  "name": "wp-sqlite",
  "version": "1.0.1",
  "description": "An app to open, view, and edit data in a sqlite database for WordPress Studio",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "generate-icons": "node scripts/generate-app-icons.js",
    "generate-all": "npm run generate-icons",
    "dev": "npm run generate-all && webpack --watch & electron-forge start",
    "build": "npm run generate-all && webpack --mode production",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "desktop",
    "WordPress",
    "SQLite",
    "database"
  ],
  "author": "Jonathan Bossenger",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-dmg": "^7.6.1",
    "@electron-forge/maker-flatpak": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-snap": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-wix": "^7.6.1",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/publisher-github": "^7.6.1",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^34.0.1",
    "jimp": "^1.6.0",
    "png2icons": "^2.0.1",
    "postcss-loader": "^8.1.1",
    "sharp": "^0.33.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.19",
    "better-sqlite3": "^11.7.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "zip"
      ],
      "category": "Utility"
    }
  }
}
